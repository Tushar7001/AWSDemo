pipeline {
     agent any
     
     tools {
     gradle 'Gradle-7.4'
     }
     stages {
         stage('Clean Workspace') {
             steps {
                  deleteDir()                  
             }
         }
         
         stage('Clone Project') {
             steps {                  
                  checkout scm                  
             }
         }
         stage('Build') {
             
             steps { 
                 echo 'executing gradle..'
                 withGradle(){
                  sh './gradlew clean -v'
             }              
             } 
           }
           }
     }
 
