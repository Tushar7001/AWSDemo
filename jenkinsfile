pipeline {
     agent any
     
     tools{
     gradle 'Gradle-6.2'"
     }
     stages {
         stage('Clean Workspace') {
             steps {
                  deleteDir()                  
             }
         }
         stage('Clone Project') {
             steps {                  
                  checkout scm                  
             }
         }
         stage('Build') {
             steps { 
                 echo executing gradle..'
                  sh './gradlew clean -v'
             }              
             }
             
     }
 }
